{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@tiles/*": ["includes/classes/Tiles/*"],
      "@pages/*": ["includes/classes/Pages/*"]
    },
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types", "assets/types"
    ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}