<div class="billboard">
    <div class="billboard__wrapper">
        {% if article.hasBackground %}
            <figure>
                <img src="{{ site.renderImage(article.getBackgroundImage)|raw }}" alt="">
            </figure>
        {% endif %}
        <div class="billboard__content">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="billboard__content-wrapper">
                            <div class="billboard__content-bubble-wrapper">
                                <div class="billboard__content-bubble"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>