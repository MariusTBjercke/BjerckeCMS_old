<article class="article-display">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="article-display__title">
                    {{ tile.getArticle(id).getTitle }}
                </div>
                <div class="article-display__content">
                    {{ tile.getArticle(id).getContent|raw }}
                </div>
                <div class="article-display__author">
                    {{ tile.getArticle(id).getAuthor.getUsername }}
                </div>
                <div class="article-display__date">
                    {{ tile.getArticle(id).getTimeAgo }}
                </div>
            </div>
        </div>
    </div>
</article>